# Example terraform.tfvars file
# Copy this to terraform.tfvars and update with your values

aws_region  = "us-east-1"
environment = "production"
owner_email = "your-email@example.com"

# These will be set automatically after MongoDB deployment
# or can be passed via environment variables
mongodb_uri = "mongodb://taskyapp:TaskyApp123!@MONGODB_IP:27017/tasky?authSource=tasky"
secret_key  = "GENERATE_WITH_openssl_rand_-hex_32"

# VPC Configuration
vpc_cidr           = "10.0.0.0/16"
availability_zones = ["us-east-1a", "us-east-1b", "us-east-1c"]

# EKS Configuration
eks_cluster_version = "1.28"

# MongoDB Configuration
mongodb_instance_type = "t3.medium"
mongodb_version       = "4.4"  # Intentionally outdated

# Security (Intentional Misconfiguration)
ssh_allowed_cidr = ["0.0.0.0/0"]  # SSH exposed to internet

# Networking
enable_nat_gateway = true  # Set to false to reduce costs (breaks private subnet internet)

# Backup Configuration
backup_retention_days = 7
